{
    "version": 2,
    "framework": null,
    "buildCommand": "npm run build",
    "installCommand": "npm install && curl -sS https://getcomposer.org/installer | php && php composer.phar install --optimize-autoloader --no-dev",
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "public/build/$1"
        },
        {
            "src": "/(css|js|images|lottie|favicon.ico|robots.txt)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.php"
        }
    ]
}