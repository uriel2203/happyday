{
    "version": 2,
    "framework": null,
    "buildCommand": "npm run build",
    "installCommand": "npm install && composer install --optimize-autoloader --no-dev",
    "builds": [
        {
            "src": "index.php",
            "use": "vercel-php@0.7.1"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "public/build/$1"
        },
        {
            "src": "/(css|js|images|lottie|favicon.ico|robots.txt)/(.*)",
            "dest": "public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "index.php"
        }
    ]
}